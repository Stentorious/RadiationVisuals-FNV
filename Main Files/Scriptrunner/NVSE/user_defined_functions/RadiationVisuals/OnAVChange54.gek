int iAVCode
float fPreviousValue
float fNewValue

begin Function {iAVCode, fPreviousValue, fNewValue}
	
	fNewValue -= fPreviousValue
	if eval (fNewValue > 0 && player.GetRadiationLevelAlt == 0)
		SetUIFloatGradual "HudMainMenu\_RV+M" (GetMinOf ((fNewValue - (Goo1.AuxVarGetFlt "*RV_INI" 0)) * (Goo1.AuxVarGetFlt "*RV_INI" 1)) 255) 0 2
	endif 

end
